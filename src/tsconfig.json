{
    "compilerOptions": {
        "outDir": "../build/src",
        "module": "commonjs",

        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "types": ["node"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "composite": true,
    },
    "extends": "../tsconfig.json",
    "include": [
        "**/*.ts",
        "genfiles/*.json",
    ]
}
