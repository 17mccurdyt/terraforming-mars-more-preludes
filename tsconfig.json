{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "ES6"], 
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es6",
    "types": ["node"],
    "moduleResolution": "node"
  },
  "files": [
    "script.ts",
    "server.ts"
  ]
}
