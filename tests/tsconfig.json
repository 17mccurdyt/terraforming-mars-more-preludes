{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["dom"],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "outDir": "../build/tests",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "types": ["node", "mocha", "chai"]
    },
    "references": [
        {
            "path": "../src/tsconfig.json"
        },
    ],
    "include": [
        "utils/Vue.ts",
        "**/*.spec.ts"
    ]
}
