{
  "name": "terraforming-mars",
  "version": "1.0.0",
  "description": "Terraforming Mars Game",
  "main": "index.js",
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.18",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.0.0",
    "nyc": "^13.3.0"
  },
  "nyc": {
    "exclude": [
        "dist/tests/**.spec.js"
    ]
  },
  "scripts": {
    "build": "rm -rf dist ; npm run build_client ; npm run build_server",
    "build_client": "tsc --build tsconfig-client.json",
    "build_server": "tsc --build tsconfig-server.json",
    "test": "rm -rf dist ; tsc --build tsconfig-test.json ; mocha dist/tests/**.spec.js",
    "cover": "tsc --build tsconfig-test.json ; nyc mocha dist/tests/**.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bafolts/terraforming-mars.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bafolts/terraforming-mars/issues"
  },
  "homepage": "https://github.com/bafolts/terraforming-mars#readme"
}
